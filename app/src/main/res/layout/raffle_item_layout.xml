<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@null"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        app:cardBackgroundColor="@color/material_on_primary_disabled"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <ImageView
                android:id="@+id/raffleImageView"
                android:layout_width="384dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.481"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/raffleNameTextView"
                android:layout_width="385dp"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="@null"
                android:maxLines="@null"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/raffleImageView"
                app:layout_constraintStart_toStartOf="@+id/raffleImageView"
                app:layout_constraintTop_toBottomOf="@+id/raffleImageView" />

            <TextView
                android:id="@+id/raffleAwardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/prize_icon"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/raffleImageView"
                app:layout_constraintTop_toBottomOf="@+id/raffleNameTextView" />

            <TextView
                android:id="@+id/raffleDurationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/sand_watch_icon"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/raffleImageView"
                app:layout_constraintTop_toBottomOf="@+id/raffleNameTextView" />

            <TextView
                android:id="@+id/rafflePriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/price_icon"
                android:text="TextView"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/raffleDurationTextView"
                app:layout_constraintStart_toEndOf="@+id/raffleAwardTextView"
                app:layout_constraintTop_toBottomOf="@+id/raffleNameTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>